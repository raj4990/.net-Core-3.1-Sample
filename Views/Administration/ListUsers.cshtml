@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">User List</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Employee" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page"> User List</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*<h4 class="card-title">Employee List</h4>*@
                    <p class="card-description">
                        Add New User <code>
                            <a asp-controller="Account" asp-action="Register"
                               class="btn btn-primary m-1"><i class="mdi mdi-plus-circle-outline"></i></a>
                        </code>
                    </p>
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table id="ListRolesTable" class="table table-striped table-bordered table-hover text-center">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>City</th>
                                        <th>Gender</th>
                                        <th>Age</th>
                                        <th>DOB</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@user.City</td>
                                        <td>@user.Gender</td>
                                        <td>@user.Age</td>
                                        <td>@user.DOB</td>                                        
                                        <td>
                                            <a asp-controller="Administration" asp-action="ViewUser" asp-route-id="@user.Id"
                                               class="btn btn-outline-success btn-sm m-1"><i class="mdi mdi-file-check btn-icon-prepend"></i></a>
                                            <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id"
                                               class="btn btn-outline-primary btn-sm m-1"><i class="mdi mdi-pencil btn-icon-prepend"></i></a>
                                            <a asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id"
                                               onclick="return confirm('Are you sure you want to delete?');"
                                               class="btn btn-outline-danger btn-sm m-1"><i class="mdi mdi-trash-can btn-icon-prepend"></i></a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <h5 class="card-title">
                            Use the button below to create a user
                        </h5>
                        <a class="btn btn-primary" style="width:auto"
                           asp-controller="Account" asp-action="Register">
                            Add new user
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ListRolesTable').DataTable();
        });
    </script>}


