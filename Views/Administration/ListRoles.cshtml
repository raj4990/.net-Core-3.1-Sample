@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Role List</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Employee" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Role List</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*<h4 class="card-title">Employee List</h4>*@
                    <p class="card-description">
                        Add New Role <code>
                            <a asp-controller="Administration" asp-action="CreateRole"
                               class="btn btn-primary m-1"><i class="mdi mdi-plus-circle-outline"></i></a>
                        </code>
                    </p>
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table id="ListRolesTable" class="table table-striped table-bordered table-hover text-center">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.Id</td>
                                            <td>@role.Name</td>
                                            <td>
                                                <a asp-controller="Administration" asp-action="ViewRole" asp-route-id="@role.Id"
                                                   class="btn btn-outline-success btn-sm m-1"><i class="mdi mdi-file-check btn-icon-prepend"></i></a>
                                                <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id"
                                                   class="btn btn-outline-primary btn-sm m-1"><i class="mdi mdi-pencil btn-icon-prepend"></i></a>
                                                <a asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id"
                                                   onclick="return confirm('Are you sure you want to delete?');"
                                                   class="btn btn-outline-danger btn-sm m-1"><i class="mdi mdi-trash-can btn-icon-prepend"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <h5 class="card-title">
                            Use the button below to create a role
                        </h5>
                        <a class="btn btn-primary" style="width:auto"
                           asp-controller="Administration" asp-action="CreateRole">
                            Add new user
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ListRolesTable').DataTable();
        });
    </script>
}
